<%= form_for (@book) do |f| %>

     <div class="text-center">
      <span style="font-size:24px;">本の登録</span>
     </div>
   <div class="row">
    
    <div class="container">
		<div class="form-group">
		 <label>本のタイトル</label>
		 <%= f.text_field :title, :class => 'form-control' %>
		</div> 
      
		<div class="form-group">
		 <label>本の著者</label>
		 <%= f.text_field :author, :class => 'form-control' %>
		</div> 

		<div class="form-group">
		 <label>本の出版社</label>
		 <%= f.text_field :publish, :class => 'form-control' %>
		</div> 

		<div class="form-group">
		 <label>本の分類</label>
		 <%= f.select :sort,options_for_select([["哲学", "哲学"], ["歴史", "歴史"], ["社会", "社会"],["自然", "自然"],["技術", "技術"],["産業", "産業"],["芸術", "芸術"],["言語", "言語"],["文学", "文学"]]), {},:class => 'form-control' %>
		</div> 

		 <div class="form-group">
		  <label>オススメ度</label>
		 <%= f.select :like, options_for_select([["おすすめしない(★)", "★"], ["あまりおすすめしない(★★)", "★★"], ["ふつう(★★★)", "★★★"],["おすすめ(★★★)", "★★★★"],["とてもおすすめ(★★★★★)", "★★★★★"]]), {},:class => 'form-control' %>
		 </div>

		 <label>画像</label>
		 <div class="input-group">

			  <span class="input-group-btn">
			    <span class="btn btn-small btn-primary btn-inverse" onclick="$(this).parent().find('input[type=file]').click();"><div class='glyphicon glyphicon-file'></div></span>
			    <%= f.file_field :picture, onchange: "$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\\\|/]/).pop());", accept: 'image/jpeg,image/gif,image/png',style: "display: none;"  %>
			  </span>
			  <span class="form-control"></span>
	     </div>


		 
		<div class="form-group">
		 <label>感想</label>
		  <%= f.text_area :impressions, :class => 'form-control' %>
		</div> 

        <div class="text-center">
		<%= f.submit "本を登録する", class: "text-center", class: "btn btn-success" %>
		</div>

		
       
		<% end %>

		<script type="text/javascript">
			  $('#micropost_picture').bind('change', function() {
			    var size_in_megabytes = this.files[0].size/1024/1024;
			    if (size_in_megabytes > 5) {
			      alert('Maximum file size is 5MB. Please choose a smaller file.');
			    }
			  });
　　　　</script>


	</div>	
　　
  </div>